<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/awesome_dialog_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"/>
    <android.support.v7.widget.CardView
        android:id="@+id/awesome_dialog"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/awesome_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/awesome_dialog_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Body"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <FrameLayout
                android:id="@+id/awesome_dialog_custom_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/awesome_dialog_btn_positive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:text="Postive" />

                <Button
                    android:id="@+id/awesome_dialog_btn_negative"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:text="Negative" />
            </LinearLayout>

            <Button
                android:id="@+id/awesome_dialog_btn_natural"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="Natural" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>